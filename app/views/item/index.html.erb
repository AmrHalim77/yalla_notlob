<h1>Item#index</h1>
<p>Find me in app/views/item/index.html.erb</p>
<h2>Order details</h2>

<% if @order.menu.attached? %>
  <image src="<%=(url_for(@order.menu))%>">
<% end %>


<table>
    <tr>
      <th>Person<th>
      <th>Item</th>
      <th>Amount</th>
      <th>Price</th>
      <th>Comment</th>
      <th>Options</th>
    </tr>   

    <% @items.each do |item| %>
      <tr>
          <td><% @user= User.find(item.user_id) %></td>
          <td><%= @user.email %></td>
          <td><%= item.item_name %></td>
          <td><%= item.amount %></td>
          <td><%= item.price %></td>
          <td><%= item.comment %></td>
          <td>          
           <% if item.user_id == current_user.id %>
            <%= link_to 'Cancel',
            {controller: 'item',
             action: 'destroy',
             id_order: params[:id],
             id: item.id},
            class: 'button' %>  
           <% end %>
          </td>
        </tr>
      <% end %> 
         
      
</table>
  <%= form_with scope: :item, :url => { :action => "create", :id_order =>params[:id], :user_id =>current_user.id},local: true do |form| %>
    <label>item name:</label>
    <%= form.text_field :item_name %><br>

    <label>amount:</label>
    <%= form.number_field( 'amount', in: 1..20, step: 1) %><br>

    <label>price:</label>
    <%= form.number_field( 'price' , in: 1..200, step: 1) %><br>

    <label>comment:</label>
    <%= form.text_area :comment, size: "20x5" %><br><br>
    <%= form.submit "add" %>
  

<% end %>
  <tr>
    <%= link_to "#{@invited} friends Invited", "/item/listInvited?order_id=#{@order.id}" %>
    <br>
    <%= link_to "#{@joined} friends Joined", "/item/listJoined?order_id=#{@order.id}" %>
    <br>
    <%= link_to "list_orders", "/order/index" %>
  </tr>
  
