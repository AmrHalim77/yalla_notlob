


<div  class="col-md-4 col-md-offset-4">

  <h1>Add Order</h1>
  <%= form_with scope: :order, url: "/order/create",local: true do |form| %>
      <div class="form-group">
    <label>Order for:</label>

    <%= form.select(:order_type, options_for_select([['breakfast','breakfast'],['lunch','lunch']]) ,:class=>"form-control") %>
  </div>
    <div class="form-group">

      <label>Restaurant:</label>
      <%= form.text_field :restaurant ,:class=>"form-control"%><br>
</div>
  <div class="form-group">

      <%= form.label "menu_image" %>
      <%= form.file_field :menu,:class=>"form-control" %>
</div>
      <%= form.submit "Publish", :class=>"btn btn-primary" %>
    <% end %>
</div>








