<table  class="table table-striped">
<tr>
<td>My Groups</td>
</tr>
<% @groups.each do |group| %>
<tr>
<td><%=group.name %><td>
<td><%= link_to 'Show', group , class:"btn btn-primary" %> </td>
<td><%= link_to 'Delete', group,  method: :delete, data: { confirm: "Are you sure?" } ,class:"btn btn-primary" %> </td>
</tr>

<% end %>
<%= link_to 'New Group', new_group_path , class:"btn btn-success"%>
</table>    